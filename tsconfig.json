{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "types/*": [ "types/*"],
    }
  },
  "include": ["src/**/*.js", "*.d.ts"],
  "exclude": ["node_modules"]
}

